{
    "exclude": ["node_modules", "*.vue"],
    "compilerOptions": {
        "jsx": "preserve",
        "types": ["vite/client", "@types/node"],
        "declaration": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "ES2021", "ESNext.Array"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
    },
    "include": [
        "common",
        "collections",
        "vite.config.ts",
        "src",
        "test",
        "functions",
        "bin",
        "__tests__",
        "cross-points",
        "similarity/*.ts",
        "k-opt",
        "*/*.ts",
        "classic-acs",
        "path-planning",
    ],
}
